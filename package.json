{
  "name": "album-to-video-app",
  "version": "1.0.0",
  "description": "Convert audio albums into videos",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --dir",
    "dist": "electron-builder",
    "test:smoke": "node scripts/smoke-test.js",
    "test:e2e": "node scripts/e2e-render-test.js"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "ffmpeg-static": "^5.3.0",
    "music-metadata": "^11.10.6"
  },
  "build": {
    "appId": "com.albumtovideo.app",
    "productName": "Album to Video",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": ["dir"]
    },
    "win": {
      "target": ["dir"]
    }
  }
}
